<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".activity.forgotpassActivity">


        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:src="@drawable/quiz" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="QUÊN MẬT KHẨU"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/etUserEmail"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/viewquestion_background"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Mời nhập email của bạn"
            android:textStyle="bold"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_forgot"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/xinxo_backgroung"
            android:text="Gửi"
            android:textStyle="bold" />

        <Button
            android:layout_marginLeft="140dp"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="300dp"
            android:textStyle="bold"
            android:background="@drawable/xinxo_backgroung"
            android:text="Trở về đăng nhập" />


</LinearLayout>